#----------------------#
# Includes all aliases #
#----------------------#

alias ls="exa -l --icons -hgb --sort name"
alias la="exa -la --icons -hbg --sort name"
alias lst="exa -T --icons --sort name"
alias lsd="exa -D --icons --sort name"
alias nv="nvim"
alias penvc="/opt/homebrew/bin/python3 -m venv env"
alias penva="source env/bin/activate"
alias pip-install="/opt/homebrew/bin/pip3 install -r requirements.txt"
alias python="/opt/homebrew/bin/python3"
alias pip="/opt/homebrew/bin/pip3"
