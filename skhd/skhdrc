# Change window focus within space
ctrl - j : yabai -m window --focus south
ctrl - k : yabai -m window --focus north
ctrl - h : yabai -m window --focus west
ctrl - l : yabai -m window --focus east

# Swap windows within space
ctrl + shift - j : yabai -m window --swap south
ctrl + shift - k : yabai -m window --swap north
ctrl + shift - h : yabai -m window --swap west
ctrl + shift - l : yabai -m window --swap east

# Move and split within space
alt + shift - down : yabai -m window --warp south
alt + shift - up : yabai -m window --warp north
alt + shift - left : yabai -m window --warp west
alt + shift - right : yabai -m window --warp east

# Change focus between monitors
ctrl - a : yabai -m display --focus west
ctrl - s : yabai -m display --focus south
ctrl - d : yabai -m display --focus east

# Move window to prev or next space
ctrl + shift - left : yabai -m window --space prev
ctrl + shift - right : yabai -m window --space next
ctrl - w : yabai -m display --focus north

# Move window to space
ctrl + shift - 1 : yabai -m window --space 1;
ctrl + shift - 2 : yabai -m window --space 2;
ctrl + shift - 3 : yabai -m window --space 3;
ctrl + shift - 4 : yabai -m window --space 4;
ctrl + shift - 5 : yabai -m window --space 5;
ctrl + shift - 6 : yabai -m window --space 6;
ctrl + shift - 7 : yabai -m window --space 7;
ctrl + shift - 8 : yabai -m window --space 8;

# Rotate windows
ctrl + shift - r : yabai -m space --rotate 270

# Flip windows
ctrl + shift - y : yabai -m space --mirror y-axis
ctrl + shift - x : yabai -m space --mirror x-axis

# Toggle float
ctrl + shift - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Resize window 
# Toggle mazimize
cmd - m : yabai -m window --toggle zoom-fullscreen

# Restore split ratio
cmd - g : yabai -m space --balance 

# Restart yabai
cmd + shift + alt - r : yabai --restart-service

# Restart skhd
cmd + shift + ctrl - r : skhd --restart-service
